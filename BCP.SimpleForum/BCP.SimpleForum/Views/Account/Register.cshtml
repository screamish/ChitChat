@model BCP.SimpleForum.Models.RegisterModel

<h2>Get chatting</h2>
<p>Sign up on ChitChat and get chatting right away.</p>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class="form-horizontal"}))
{
    @Html.AntiForgeryToken()
    
    <fieldset>
    
        <legend>Enter your details</legend>

        @Html.ValidationSummary()

        <div class="control-group">
            @Html.LabelFor(m => m.UserName, "Email address", new { @class="control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.Password, "Password", new { @class="control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.ConfirmPassword, "Confirm your password", new { @class="control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn btn-success btn-large">Create an account</button>
            </div>
        </div>

    </fieldset>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}